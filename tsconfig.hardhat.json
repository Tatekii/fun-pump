{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "types": ["node", "mocha", "chai"],
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": [
    "hardhat.config.ts",
    "./test",
    "./typechain-types"
  ],
  "files": ["hardhat.config.ts"],
  "exclude": ["node_modules", "app"]
}
